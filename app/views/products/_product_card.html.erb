<% @products.each do |product| %>
  <% if product.active %>
      

      <div class="m-1 d-flex flex-column">

        <div class="product-card ">
        <% if product.image.attached? %>
          <div class="product-image">
            <%= cl_image_path product.image.key, crop: :fill %>
          </div>
        <% else %>
          <div class="background-image">
              <%# Foto cargada en product_card.scss %>
          </div>
        <% end %>
      <%# Manejo de display-products %>
        <div class="m-3">
          <div class="d-flex justify-content-between">
            <h5><strong><%= product.name %></strong></h5>
            <p>$<%= product.price%></p>
          </div>
          <p><%= product.description %></p>

            <%# Form add-cart %>
          <div class=" align-items-center ">
            <%= simple_form_for(@cart_item, remote: true ) do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.number_field :quantity, value: 0, min: 0 %>
              <%= f.submit "AÃ±adir al pedido" , class: "btn btn-primary"%>
            <% end %>
          </div>
          
        </div>

    <%# product-card %>
        </div>

    </div>

<%#       If product.active %>
  <% end %>
<% end %>
